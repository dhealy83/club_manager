<div id="<%= dom_id tournament %>">
  <div>
    <strong>Title:</strong>
    <%= tournament.title %>
  </div>

  <div>
    <strong>Date:</strong>
    <%= tournament.date %>
  </div>

  <div>
    <strong>Location:</strong>
    <%= tournament.location %>
  </div>

  <div>
    <strong>Description:</strong>
    <%= tournament.description %>
  </div>

  <div class="d-flex justify-content-center m-0">
  <% tournament.images.each do |image| %>
    <%= image_tag(image, style: "object-fit: contains; width: 95%; height: auto")%>
  <% end %>
  </div>

</div>
