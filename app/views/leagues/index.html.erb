<p style="color: green"><%= notice %></p>
<% if user_signed_in? %>
  <%= link_to "New league", new_league_path if current_user.moderator? %>
<% end %>
<h1>Leagues</h1>

<div id="leagues" style="margin-bottom: 100px">
  <% @leagues.each do |league| %>
    <%= render league %>
      <% if user_signed_in? %>
        <p>
          <%= link_to "Show this league", league if current_user.moderator? %>
          
        </p>
      <% end%>
  <% end %>
</div>